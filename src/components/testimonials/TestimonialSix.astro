export const testimonialsData = [
  {
    quote:
      "The service exceeded my expectations. The staff made extra efforts to fulfill my requirements",
    author: "David Gutierrez",
    role: "Founder of @nocodegallery",
    imageUrl:
      "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80",
  },
  {
    quote:
      "Their unparalleled attention to detail and dedication to excellence is why I'd vouch for this company.",
    author: "Alonso",
    role: "Entrepreneur",
    imageUrl:
      "https://images.unsplash.com/photo-1633332755192-727a05c4013d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80",
  },
  {
    quote:
      "This team transformed our digital strategy, and the results were phenomenal. Truly a class apart.",
    author: "Jasmine Lee",
    role: "Digital Marketing Manager",
    imageUrl:
      "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80",
  },

];
---

<section>
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
    <div class="max-w-xl text-center mx-auto">
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >testiomonials</span
      >
      <h2
        class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl lg:text-balance">
        Our customers and their experiences
      </h2>
      <p class="mt-6 text-slate-500 text-sm text-balance">
        Spaziobianco Public rollover performance exchange traded funds junk
        bonds passively NASDAQ bills upswing retirement corporate market
        exposure.
      </p>
    </div>

    <ul
      class="grid lg:grid-cols-3 mt-12 gap-x-4 gap-y-12"
      role="list">
      {
        testimonialsData.map((testimonial, index) => (
          <li>
            <div class="flex flex-col justify-between flex-1 gap-6 h-full p-8 bg-slate-50 rounded-3xl">
              <div class="lg:col-span-2 ">
                <p class="text-slate-500">"{testimonial.quote}"</p>
              </div>
              <div class="items-center inline-flex gap-3">
                <div class="flex-shrink-0">
                  <img
                    alt={`A picture of ${testimonial.author}`}
                    class="rounded-full size-10  object-cover"
                    src={testimonial.imageUrl}
                  />
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-black font-medium">
                    {testimonial.author}
                  </p>
                  <p class="text-sm text-slate-500">{testimonial.role}</p>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
