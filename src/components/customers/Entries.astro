---
const { customer, logo, url, about } = Astro.props;
---

<div class="flex flex-col h-full lg:justify-between">
  <div>
    <img
      src={logo}
      alt={customer}
    />

    <p class="font-medium text-2xl text-purple-900 mt-12">{customer}</p>
    <p class="text-sm text-slate-500 mt-5 lg:text-balance">{about}</p>
  </div>
  <div class="mt-6">
    <a
      aria-label={customer}
      href={url}
      title={customer}
      class="text-purple-900 hover:text-blue-600 inline-flex items-center group">
      Read more
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="size-4 ml-3 group-hover:translate-x-2 transition duration-500 ease-in-out transform">
        <path
          fill-rule="evenodd"
          d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
          clip-rule="evenodd"
        ></path>
      </svg>
    </a>
  </div>

</div>
