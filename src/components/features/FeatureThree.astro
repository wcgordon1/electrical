---
import { Code } from "astro/components";
const features = [
  {
    title: "Commercial Electricians",
    description:
      "Experts in office buildings, retail spaces, and industrial facilities.",
  },
  {
    title: "Residential Electricians",
    description: "Specialists in home wiring, panel upgrades, and smart home installations.",
  },
];
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 mt-16 mb-36">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-start">
      <div>
        <span class="text-sm font-medium tracking-wide text-blue-600 uppercase"
          >Electrical Skills</span
        >
        <h2
          class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl">
          Commercial and Residential Electricians
        </h2>
        <p class="text-slate-500 mt-5">
          Electricians need deep technical knowledge and hands-on experience in their specialty.
          Commercial and residential work requires different skills and certifications.
          <br />
          <br />
          From industrial control systems to home automation, modern electricians combine
          traditional electrical knowledge with cutting-edge technology.
        </p>
        <ul
          role="list"
          class="grid grid-cols-2 gap-4 list-none lg:gap-6 mt-12">
          {
            features.map((feature) => (
              <li>
                <p class="font-semibold text-purple-900 text-base">
                  {feature.title}
                </p>
                <div class="mt-2 text-slate-500 text-sm">
                  {feature.description}
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="lg:mt-0 mt-12 h-full lg:order-first">
        <!-- Include these scripts somewhere on the page: -->
        <div class="lg:mt-0 mt-12 h-full">
          <div
            x-data="{
        tabSelected: 1,
        tabId: $id('tabs'),
        tabButtonClicked(tabButton){
            this.tabSelected = tabButton.id.replace(this.tabId + '-', '');
            this.tabRepositionMarker(tabButton);
        },
        tabRepositionMarker(tabButton){
            this.$refs.tabMarker.style.width=tabButton.offsetWidth + 'px';
            this.$refs.tabMarker.style.height=tabButton.offsetHeight + 'px';
            this.$refs.tabMarker.style.left=tabButton.offsetLeft + 'px';
        },
        tabContentActive(tabContent){
            return this.tabSelected == tabContent.id.replace(this.tabId + '-content-', '');
        }
    }"
            x-init="tabRepositionMarker($refs.tabButtons.firstElementChild);"
            class="relative lg:rounded-3xl">
            <div
              x-ref="tabButtons"
              class="relative inline-grid items-center justify-center w-full h-10 grid-cols-2 p-1 bg-slate-100 rounded-full select-none">
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-full cursor-pointer whitespace-nowrap"
                >Commercial</button
              >
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-md cursor-pointer whitespace-nowrap"
                >Residential</button
              >
              <div
                x-ref="tabMarker"
                class="absolute left-0 z-10 w-1/2 h-full duration-300 ease-out"
                x-cloak>
                <div class="w-full h-full bg-white rounded-full shadow-sm">
                </div>
              </div>
            </div>
            <div
              class="relative w-full mt-2 content p-4 bg-[#14162a] rounded-3xl">
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative">
                <!-- Tab Content 1 - Replace with your content -->
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`// Commercial Electrician Knowledge

const industrialControls = {
  plcProgramming: ['Ladder Logic', 'Function Block', 'Structured Text'],
  motorControls: ['VFD Configuration', 'Soft Starters', 'Motor Protection'],
  buildingAutomation: {
    lighting: 'DALI Protocol',
    hvac: 'BACnet Integration',
    security: 'Access Control Systems'
  },
  powerDistribution: ['Switchgear', 'Transformers', 'Load Calculations']
};

// Required Certifications

const certifications = [
  'Journeyman Electrician License',
  'OSHA Safety Certification',
  'PLC Programming Certificate'
];`}
                    lang="js"
                    theme="css-variables"
                  />
                </section>
                <!-- End Tab Content 1 -->
              </div>
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative"
                x-cloak>
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`// Residential Electrician Knowledge

const residentialSystems = {
  smartHome: {
    automation: ['Lutron', 'Control4', 'HomeKit'],
    security: ['Cameras', 'Alarms', 'Access Control'],
    entertainment: ['Whole-House Audio', 'Home Theater']
  },
  electrical: {
    service: ['Panel Upgrades', 'Circuit Installation'],
    renewable: ['Solar Integration', 'Battery Backup'],
    lighting: ['LED Systems', 'Dimming Controls']
  }
};

// Common Tasks

const dailyWork = [
  'Code Compliance Checks',
  'Troubleshooting',
  'Installation Planning'
];`}
                    lang="js"
                    theme="css-variables"
                  />
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
