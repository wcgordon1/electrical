---
import "../styles/global.css";
import Metas from "./seo/Metas.astro";
import Favicons from "./seo/Favicons.astro";

const {
  title = "Electrical Jobs - Get Hired",
  description = "Electrical Jobs is the #1 hiring platform for light industrial jobs nationwide.",
  socialImage = "images/ogjake.png",
  twitterImage = "images/ogjake.png",
  author = "Electrical Jobs",
  
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Metas
  title={title}
  description={description}
  url={canonicalURL}
  socialImage={socialImage}
  author={author}
  twitterImage={twitterImage}
/>
<Favicons />

