---
const pricingPlans = [
  {
    name: "Hobby",
    monthlyPrice: "15",
    annualPrice: "8",
    description:
      "This plan is ideal for individual users and hobbyists who are looking for essential functionalities to support their projects.",
    cardBgClass: "bg-slate-50",
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-100 hover:bg-blue-50 text-blue-600",
    features: ["5 mb/PDF", "75 pages/PDF", "10 messages/Day", "Up to 3 PDFs"],
    unavailableFeatures: ["Gpt-3.5-turbo model", "Test mode", "Doc summary"],
  },

  {
    name: "Pro",
    monthlyPrice: "50",
    annualPrice: "40",
    description:
      "Tailored for medium-sized businesses, this plan offers advanced tools and features to support your growing demands.",
    cardBgClass: "bg-slate-50",
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-500 hover:bg-blue-600 text-white",
    features: [
      "32 mb/PDF",
      "1500 pages/PDF",
      "1000 messages/Day",
      "Up to 50 PDFs",
      "Gpt-3.5-turbo-16k model",
      "Test mode",
      "Doc summary",
    ],
    unavailableFeatures: [],
  },
];
---

<section x-data="{annual: false}">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 pb-12 pt-24">
    <div class="text-center">
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >pricing</span
      >
      <h2
        class="text-purple-900 font-semibold tracking-tight lg:text-4xl mt-6 text-3xl text-balance md:text-balance md:w-1/2 mx-auto">
        Always know what you'll pay, transparent pricing for everyone.
      </h2>
      <p class="text-slate-500 mt-5 md:text-balance md:w-1/2 mx-auto">
        Choose a plan that works the best for you and your team. Start small,
        upgrade when you need.
      </p>
      <div class="md:max-w-sm mx-auto mt-12">
        <div
          class="inline-flex w-full border rounded-full mt-6 overflow-hidden bg-white p-0.5 z-0">
          <button
            class="text-black font-medium border rounded-full transition w-full py-2 block border-transparent px-8 text-xs"
            @click="annual = false"
            :class="annual == false ? 'bg-slate-100 border text-black ' : ''"
            type="button"
            >Monthly</button
          >
          <button
            class="text-black font-medium border rounded-full transition w-full py-2 block border-transparent px-8 text-xs"
            @click="annual = true"
            :class="annual == true ? 'bg-slate-100 border text-black' : ''"
            type="button"
            >Annual</button
          >
        </div>
      </div>
    </div>
    <div
      class="relative my-12 space-y-4 sm:mt-16 sm:space-y-0 sm:grid md:grid-cols-2
    sm:gap-3 max-w-7xl lg:mx-auto">
      {
        pricingPlans.map((plan) => (
          <section>
            <div
              class={` ${plan.cardBgClass}  flex flex-col  justify-between w-full  rounded-3xl  p-8`}>
              <div>
                <div class="flex items-center justify-between">
                  <p class="text-4xl text-purple-900">{plan.name}</p>
                  <p class="text-purple-900">
                    <span class="text-5xl font-light    tracking-tight">
                      <span x-show="!annual">${plan.monthlyPrice}</span>
                      <span x-show="annual">${plan.annualPrice}</span>
                    </span>
                  </p>
                </div>
                <div class="space-y-4 mt-8">
                  <span class="text-base font-medium block text-purple-900">
                    Monthly
                    <span
                      x-show="annual"
                      style="display: none;">
                      (billed annually)
                    </span>
                  </span>
                  <p class={`text-sm text-pretty ${plan.descriptionColor}`}>
                    {plan.description}
                  </p>
                </div>
              </div>
              <ul
                class={`grid md:grid-cols-2 gap-x-4 order-last mt-8 text-sm ${plan.descriptionColor} gap-y-3 `}>
                {plan.features.map((feature) => (
                  <li class="inline-flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-circle-check"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                      <path d="M9 12l2 2l4 -4" />
                    </svg>
                    {feature}
                  </li>
                ))}
                {plan.unavailableFeatures.map((feature) => (
                  <li class="inline-flex items-center gap-2 text-slate-400 line-through">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-xbox-x">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M12 21a9 9 0 0 0 9 -9a9 9 0 0 0 -9 -9a9 9 0 0 0 -9 9a9 9 0 0 0 9 9z" />
                      <path d="M9 8l6 8" />
                      <path d="M15 8l-6 8" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="flex mt-6">
                <button
                  type="button"
                  title={plan.name}
                  aria-label="get started"
                  class={`inline-flex items-center justify-center px-6 py-3.5 rounded-full w-full font-medium  ${plan.buttonClass}`}>
                  Get started
                </button>
              </div>
            </div>
          </section>
        ))
      }
    </div>
  </div>
</section>
