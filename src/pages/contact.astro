---
import BaseLayout from "@/layouts/BaseLayout.astro";

const features = [
  {
    icon: "sales",
    title: "SALES",
    description: "Find out how we can help your business grow.",
  },
  {
    icon: "support", 
    title: "Support",
    description: "Have a support question? We've got answers.",
  },
  {
    icon: "press",
    title: "Press", 
    description: "Media inquiries and publication ideas welcome.",
  },
  {
    icon: "partners",
    title: "Partners",
    description: "Interested in partnering? Let's discuss opportunities.",
  },
];

// Add JSON-LD data
const organizationJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Jake's Jobs",
  "url": "https://bestelectricianjobs.com",
  "logo": {
    "@type": "ImageObject",
    "url": "https://bestelectricianjobs.com/images/eleclog.png",
    "width": "112",
    "height": "112",
    "caption": "Jake's Jobs Logo"
  },
  "description": "Leading job board for electrical professionals, connecting skilled electricians with top employers across the United States.",
  "foundingDate": "2022",  // Add your actual founding date
  "contactPoint": [
    {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "telephone": "+1-415-877-8810",
      "email": "hello@bestelectricianjobs.com",
      "availableLanguage": ["English", "Spanish"],  // Add all languages you support
      "areaServed": ["US", "CA"],  // Add all countries you serve
      "hoursAvailable": "Mo-Fr 09:00-17:00"
    },
    {
      "@type": "ContactPoint",
      "contactType": "sales",
      "telephone": "+1-415-877-8810",
      "email": "sales@bestelectricianjobs.com",
      "availableLanguage": ["English"],
      "areaServed": ["US", "CA"]
    }
  ],
  "sameAs": [
    "https://www.reddit.com/r/ElectricalJobs/",
    "https://www.linkedin.com/company/electrician-jobs/",
    "https://x.com/electricaljob__",
    "https://www.facebook.com/bestelectricianjobs"
  ],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "695 Town Center Dr Suite 1100",
    "addressLocality": "Costa Mesa",
    "addressRegion": "CA",
    "postalCode": "92626",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "33.6846",
      "longitude": "-117.8841"
    },
    "geoRadius": "2000"
  },
  "makesOffer": [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Job Posting Service",
        "description": "Post electrical and construction jobs to reach qualified candidates"
      }
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Resume Database Access",
        "description": "Search and contact qualified electrical professionals"
      }
    }
  ],
  "member": {
    "@type": "OrganizationRole",
    "roleName": "member",
    "memberOf": [
      {
        "@type": "Organization",
        "name": "National Electrical Contractors Association",
        "url": "https://www.necanet.org/"
      }
    ]
  },
  "numberOfEmployees": {
    "@type": "QuantitativeValue",
    "minValue": "4",
    "maxValue": "10"
  },
  "knowsAbout": [
    "Electrical Recruitment",
    "Electrical Contracting",
    "Construction Staffing",
    "Electrical Job Market",
    "Skilled Trade Employment"
  ]
};
const pageTitle = "Contact Us. We are happy to help!";
const pageDescription = "Contact Jake's Jobs to learn more about our services and how we can help you find the perfect electrician or technician for your business.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(organizationJsonLd, null, 2)} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).toString()} />
  </Fragment>

  <section>
    <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
      <div class="flex flex-col gap-12 lg:gap-24">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center">
          <div class="lg:text-left">
            <span class="text-sm uppercase font-medium tracking-wide text-indigo-600">
              Contact us
            </span>
            <h1 class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl lg:text-balance">
              Get in touch with Jake's Jobs
            </h1>
            <dl class="mt-10 space-y-4 text-sm">
              <div class="flex gap-x-4">
                <dt class="flex-none">
                  <span class="sr-only">Address</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="text-indigo-600 size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
                    <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"></path>
                  </svg>
                </dt>
                <dd class="text-slate-500">Costa Mesa, California</dd>
              </div>
              <div class="flex gap-x-4">
                <dt class="flex-none">
                  <span class="sr-only">Email</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="text-indigo-600 size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"></path>
                    <path d="M3 7l9 6l9 -6"></path>
                  </svg>
                </dt>
                <dd>
                  <a href="mailto:hello@bestelectricianjobs.com" class="text-slate-500 hover:text-indigo-600">
                    hello @ bestelectricianjobs.com
                  </a>
                </dd>
              </div>
            </dl>
          </div>

          <form
            id="contactForm"
            class="bg-white p-8 rounded-3xl shadow-2xl shadow-slate-200/20 ring-1 ring-slate-200 w-full"
          >
            <div class="flex-col flex gap-4">
              <div>
                <label for="name" class="sr-only">Name</label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  placeholder="Your name *"
                  class="block w-full rounded-full border-0 px-4 py-3.5 text-slate-500 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-purple-500 sm:text-sm sm:leading-6 duration-200 outline-none"
                />
              </div>
              <div>
                <label for="email" class="sr-only">Email</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  placeholder="Email address *"
                  class="block w-full rounded-full border-0 px-4 py-3.5 text-slate-500 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-purple-500 sm:text-sm sm:leading-6 duration-200 outline-none"
                />
              </div>
              <div>
                <label for="phone" class="sr-only">Phone number</label>
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  required
                  placeholder="Your phone number *"
                  class="block w-full rounded-full border-0 px-4 py-3.5 text-slate-500 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-purple-500 sm:text-sm sm:leading-6 duration-200 outline-none"
                />
              </div>
              <div>
                <label for="message" class="sr-only">Message</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="4"
                  placeholder="Message"
                  class="block w-full rounded-2xl border-0 px-4 py-3.5 text-slate-500 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-purple-500 sm:text-sm sm:leading-6 duration-200 outline-none"
                ></textarea>
              </div>
              <div class="mb-4">
                <label for="file" class="sr-only">Attachment</label>
                <input
                  type="file"
                  id="file"
                  name="file"
                  class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100"
                />
              </div>
            </div>
            <div class="space-y-4">
              <button
                type="submit"
                id="submitButton"
                class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-indigo-500 duration-200 py-3.5 rounded-full active:bg-indigo-800 active:text-white bg-indigo-500 hover:bg-indigo-600 w-full"
              >
                Send Message
              </button>

              <div 
                id="statusMessage" 
                class="hidden rounded-lg p-4 text-sm"
              >
                <!-- Status message will be inserted here -->
              </div>
            </div>
          </form>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
          {
            features.map((feature) => (
              <div class="bg-slate-50 p-8 rounded-3xl">
                <div class="flex items-center gap-2">
                  {feature.icon === "sales" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="size-5 text-indigo-600"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M3 5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5z" />
                      <path d="M7 15h.01M7 11h.01M11 15h.01M11 11h.01M15 15h.01M15 11h.01" />
                      <path d="M3 7h18" />
                    </svg>
                  )}
                  {feature.icon === "support" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="size-5 text-indigo-600"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0-8 0" />
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0-18 0" />
                      <path d="M15 15l3.35 3.35" />
                      <path d="M9 15l-3.35 3.35" />
                      <path d="M5.65 5.65l3.35 3.35" />
                      <path d="M18.35 5.65l-3.35 3.35" />
                    </svg>
                  )}
                  {feature.icon === "press" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="size-5 text-indigo-600"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M16 6h3a1 1 0 0 1 1 1v11a2 2 0 0 1-4 0v-13a1 1 0 0 0-1-1h-10a1 1 0 0 0-1 1v12a3 3 0 0 0 3 3h11" />
                      <path d="M8 8l4 0" />
                      <path d="M8 12l4 0" />
                      <path d="M8 16l4 0" />
                    </svg>
                  )}
                  {feature.icon === "partners" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="size-5 text-indigo-600"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M5 7a4 4 0 1 0 8 0a4 4 0 0 0-8 0" />
                      <path d="M3 21v-2a4 4 0 0 1 4-4h4c.96 0 1.84 .338 2.53 .901" />
                      <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                      <path d="M16 19h6" />
                      <path d="M19 16v6" />
                    </svg>
                  )}
                  <h3 class="text-purple-900 font-semibold">{feature.title}</h3>
                </div>
                <p class="mt-2 text-slate-500 text-sm">{feature.description}</p>
                <a href="mailto:hello@bestelectricianjobs.com" class="mt-6 text-indigo-600 hover:text-indigo-700 inline-flex items-center gap-2 text-sm font-medium">
                  Send us an Email
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="size-4" 
                    viewBox="0 0 24 24" 
                    stroke-width="2" 
                    stroke="currentColor" 
                    fill="none"
                  >
                    <path d="M4 12h16m-7-7 7 7-7 7" />
                  </svg>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const submitButton = document.getElementById('submitButton') as HTMLButtonElement;
  const statusMessage = document.getElementById('statusMessage');
  
  form?.addEventListener('submit', async function(event) {
    event.preventDefault();

    const formData = new FormData(this);

    try {
      // Update button state
      submitButton.innerHTML = 'Sending...';
      submitButton.disabled = true;
      statusMessage.classList.add('hidden');

      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData,
      });

      const result = await response.json();
      if (result.success) {
        statusMessage.classList.remove('hidden');
        statusMessage.classList.add('bg-indigo-50', 'text-indigo-800');
        statusMessage.innerHTML = `
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <path d="M5 12l5 5l10 -10" />
            </svg>
            <span>Thank you for reaching out! We'll get back to you within 24-48 hours.</span>
          </div>
        `;
        
        // Reset form after 3 seconds
        setTimeout(() => {
          form.reset();
          statusMessage.classList.add('hidden');
        }, 3000);
      } else {
        throw new Error(result.error);
      }
    } catch (error) {
      statusMessage.classList.remove('hidden');
      statusMessage.classList.add('bg-red-50', 'text-red-800');
      statusMessage.innerHTML = `
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
            <path d="M12 9v4" />
            <path d="M12 16v.01" />
          </svg>
          <span>Error: ${error.message || 'There was an error sending your message. Please try again or email us directly at hello@bestelectricianjobs.com'}</span>
        </div>
      `;
    } finally {
      // Reset button state
      submitButton.disabled = false;
      submitButton.innerHTML = 'Send Message';
    }
  });
</script>